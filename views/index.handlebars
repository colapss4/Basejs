<h3>Pagina Inicial</h3>
{{# if alerta}}

<div class="alert alert-danger" role="alert">
 Sem contatos cadastrados!!!
</div>

{{ else }}

    <table class="table">
  <thead>
    <tr>
      <th>AÇÕES</th>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Data Nascimento</th>
      <th scope="col">E-mail</th>
      <th scope="col">Telefones</th>
      {{!-- <th scope="col">CEP</th> --}}
      <br>
      <th scope="col">EDITAVEIS</th>
      
    </tr>
  </thead>
  <tbody>
    {{# each pessoas}}
    <tr>
      <td>
        <a href="/show/{{this.id}}" class="btn btn-primary btn-sm">VER</a>
      </td>
      <td scope="row">{{this.id}}</td>
      <td>{{upperCase this.nome}}</td>
      <td>{{formataData this.data_nascimento}}</td>
      <td>{{this.email}}</td>
      {{# each telefones}}
        <td>{{this.numero}}</td>
        {{/each}}
      <td>{{this.cep}}</td>
      <th>
        <a href="/atualizar/{{this.id}}" class="btn btn-success btn-sm">EDITAR</a>
        <a href="/deletar/{{this.id}}" class="btn btn-danger btn-sm">DELETAR</a>
      </th>
      {{/ each}}
    </tr>
  </tbody>
</table>

{{/ if}}